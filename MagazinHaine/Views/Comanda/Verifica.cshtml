@model Comanda

<form asp-action="Verifica" method="post" class="form-horizontal" role="form">
    <br />
    <h4>Inca putin si poti comanda un produs</h4>
    <div asp-validation-summary="All" class="danger"></div>

    <div class="form-group">
        <label asp-for="NumeFamilie" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="NumeFamilie" class="form-control" />
            <span asp-validation-for="NumeFamilie" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Prenume" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="Prenume" class="form-control" />
            <span asp-validation-for="Prenume" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Adresa" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="Adresa" class="form-control" />
            <span asp-validation-for="Adresa" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Oras" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="Oras" class="form-control" />
            <span asp-validation-for="Oras" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CodPostal" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="CodPostal" class="form-control" />
            <span asp-validation-for="CodPostal" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NumarTelefon" class="col-md-3 col-form-label"></label>
        <div class="col-md-5">
            <input asp-for="NumarTelefon" class="form-control" />
            <span asp-validation-for="NumarTelefon" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Completeaza Comanda" />
         </div>
    </div>
</form>