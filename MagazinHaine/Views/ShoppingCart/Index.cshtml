@model ShoppingCartViewModel

    <h2>Shopping Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>Cantitatea Selectata</th>
            <th>Produs</th>
            <th class="text-right">Pret</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
        {
        <tr>
            <td class="text-left"><a asp-controller="ShoppingCart" asp-action="StergeDinShoppingCart" asp-route-produsId="@item.Produs.ProdusId" alt="">Sterge cantitatea</a></td>
            <td class="text-center">@item.Cantitate</td>
            <td class="text-left">@item.Produs.Nume</td>
            <td class="text-right">@item.Produs.Pret.ToString("c")</td>
            <td class="text-right">
                @((item.Cantitate * item.Produs.Pret).ToString("c"))
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="CurataCos">Curata cosul</a>
    <a class="btn btn-primary" asp-controller="Comanda" asp-action="Verifica">Verifica</a>
</div>